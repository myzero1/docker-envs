version: '2.1'
services:
  ndbm:
    container_name: ndbm
    image: "mysql/mysql-cluster"
    entrypoint: /entrypoint.sh ndb_mgmd
    ports:
      - "3308:3306"
    volumes:
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/mysql-cluster/cnf/mysql-cluster.cnf:/etc/mysql-cluster.cnf
    environment:
      - MYSQL_ROOT_PASSWORD=defaultpass
    networks:
      cluster:
        ipv4_address: 192.168.0.2

  ndbd1:
    container_name: ndb1
    image: "mysql/mysql-cluster"
    entrypoint: /entrypoint.sh ndbd
    ports:
      - "13306:3306"
    volumes:
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/mysql-cluster/cnf/my.cnf:/etc/my.cnf
    environment:
      - MYSQL_ROOT_PASSWORD=defaultpass
    depends_on:
      - ndbm
    networks:
      cluster:
        ipv4_address: 192.168.0.3

  ndbd2:
    container_name: ndb2
    image: "mysql/mysql-cluster"
    entrypoint: /entrypoint.sh ndbd
    ports:
      - "13307:3306"
    volumes:
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/mysql-cluster/cnf/my.cnf:/etc/my.cnf
    environment:
      - MYSQL_ROOT_PASSWORD=defaultpass
    depends_on:
      - ndbm
    networks:
      cluster:
        ipv4_address: 192.168.0.4

  ndbd3:
    container_name: ndb3
    image: "mysql/mysql-cluster"
    entrypoint: /entrypoint.sh ndbd
    ports:
      - "13308:3306"
    volumes:
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/mysql-cluster/cnf/my.cnf:/etc/my.cnf
    environment:
      - MYSQL_ROOT_PASSWORD=defaultpass
    depends_on:
      - ndbm
    networks:
      cluster:
        ipv4_address: 192.168.0.5

  ndbd4:
    container_name: ndb4
    image: "mysql/mysql-cluster"
    entrypoint: /entrypoint.sh ndbd
    ports:
      - "13309:3306"
    volumes:
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/mysql-cluster/cnf/my.cnf:/etc/my.cnf
    environment:
      - MYSQL_ROOT_PASSWORD=defaultpass
    depends_on:
      - ndbm
    networks:
      cluster:
        ipv4_address: 192.168.0.6

  mysqld1:
    container_name: mysql1
    image: "mysql/mysql-cluster"
    entrypoint: /entrypoint.sh mysqld
    ports:
      - "23306:3306"
    volumes:
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/mysql-cluster/cnf/my.cnf:/etc/my.cnf
    environment:
      - MYSQL_ROOT_PASSWORD=defaultpass
    depends_on:
      - ndbm
      - ndbd1
      - ndbd2
      - ndbd3
      - ndbd4
    networks:
      cluster:
        ipv4_address: 192.168.0.10

networks:
  cluster:
    driver: bridge
    enable_ipv6: false
    ipam:
      driver: default
      config:
        - subnet: 192.168.0.0/16