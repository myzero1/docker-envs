version: "2"
services:
  web:
    image: nginx
    ports:
      - "80:80"
    restart: always
    volumes:
      - ~/.docker/docker-workspace/docker-envs/app:/www/web
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/web/nginx/conf:/etc/nginx
      - /var/lib/boot2docker/docker-worspace/docker-envs/data/web/nginx/web_logs:/www/web_logs
    networks:
      - code-network
    depends_on:
      - php
  mysql:
    image: mysql:5.7
    ports:
      - "3306:3306"
    restart: always
    volumes:
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/mysql/conf.d:/etc/mysql/conf.d
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/mysql/docker-entrypoint-initdb.d:/docker-entrypoint-initdb.d
      - /var/lib/boot2docker/docker-worspace/docker-envs/data/mysql/data:/var/lib/mysql
    restart: always
    environment:
      - MYSQL_ROOT_PASSWORD=myzero1&735
      - MYSQL_DATABASE=yii2advanced
    networks:
      - code-network
  php:
    image: fecshop/php-fpm-7.1.13
    restart: always
    volumes:
      - ~/.docker/docker-workspace/docker-envs/app:/www/web
      - /var/lib/boot2docker/docker-worspace/docker-envs/env/services/php/etc/php7.1.13.ini:/usr/local/etc/php/conf.d/php7.1.13.ini
    depends_on:
      - mysql
    networks:
      - code-network
  sshd:
    image: rastasheep/ubuntu-sshd:18.04
    ports:
      - "3000:3000"
      - "35711:35711"
      - "35721:35721"
      - "35731:35731"
      - "35741:35741"
      - "35751:35751"
    volumes:
      - ~/.docker/docker-workspace/docker-envs/app:/home/app
    networks:
      - code-network
networks:
  code-network:
    driver: bridge
